{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "lib",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "typings.d.ts"],
  "exclude": ["node_modules"]
}
